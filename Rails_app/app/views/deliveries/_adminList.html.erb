<h1>Deliveries</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Customer</th>
      <th>Cart</th>
      <th>Adress</th>
      <th>Payed</th>
      <th>Shipped</th>
      <th>Order date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.id %></td>
        <td><%= delivery.customer_id %></td>
        <td><%= delivery.cart_id %></td>
        <td><%= delivery.adress %><br><%= delivery.zip %><br><%= delivery.city %></td>
        <td><%= delivery.payed %></td>
        <td><%= delivery.shipped %></td>
        <td><%= delivery.created_at.to_date %></td>
        <td><%= link_to 'Show', delivery %></td>
        <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
        <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Delivery', new_delivery_path %>

<p id="notice"><%= notice %></p>

<h1>Sales Products</h1>

<table>
  <thead>
    <tr>
      <th>Sale</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales_products.each do |sales_product| %>
      <tr>
        <td><%= sales_product.sale %></td>
        <td><%= sales_product.product %></td>
        <td><%= link_to 'Show', sales_product %></td>
        <td><%= link_to 'Edit', edit_sales_product_path(sales_product) %></td>
        <td><%= link_to 'Destroy', sales_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sales Product', new_sales_product_path %>

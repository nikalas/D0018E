<% provide(:title, "Profil") %>
<%= image_path("#{@user.picture}") %>

<table>
  <tbody>
    <tr>
      <td> Namn: </td>
      <td> <%= @user.name %></td>
    </tr>
    <tr>
      <td> Perssonmummer: </td>
      <td> <%= @user.p_nr %> </td>
    </tr>
    <tr>
      <td> Adress: </td>
      <td>
        <%= @user.adress %> <br>
        <%= @user.zip %> <br>
        <%= @user.city %> <br>
      </td>
    </tr>
    <tr>
      <td> E-post: </td>
      <td> <%= @user.email %> </td>
    </tr>
    <tr>
      <td> Telefonnummer: </td>
      <td> <%= @user.phone_nr %> </td>
    </tr>
  </tbody>
<table>

<p><%= link_to 'Ändra', edit_customer_path(@user), :class => "btn btn-default" %> användarinformation.</p>

<p><%= link_to 'Se', deliveries_path(@user), :class => "btn btn-default" %> tidigare beställningar.</p>

<p><%= link_to 'Välj', carts_path(@user), :class => "btn btn-default" %> kundkorg.</p>

<% random_products = @products.limit(5).order("RANDOM()") %>

<% random_products.each do |product| %>
  <%= link_to image_tag( product.picture.empty? ? "placeholder.png" : "#{product.category_id}/#{product.picture}",
                         :alt => product.name,
                         :class => "img-rounded",
                         size: 100 ),
              item_path( product ),
              title: product.name %>
<% end %>
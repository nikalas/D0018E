<% Category.all.each do |category| %>
  <% if category.parent == 1 then %>
    <li>
      <%= link_to category.name, category %>
    </li>
    <% Category.all.each do |sub| %>
      <% if sub.parent == category.id %>
        <li>
          <%= link_to "&emsp;&raquo;&nbsp;".html_safe + sub.name, sub %>
        </li>
      <% end %>
    <% end %>
  <% end %>
<% end %>